<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/btn_wx_hint_bg</item>
        <item name="colorPrimaryDark">@color/text_black</item>
        <item name="colorAccent">@color/btn_wx_hint_bg</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemTextAppearance">@style/MyMenuTextAppearance</item>
    </style>

    <style name="MyMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="TransprantAppTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>
    <style name="AppLoginTheme" parent="AppTheme">
        <item name="android:textColor">@color/text_primary</item>
        <!--<item name="android:textColorHint">@drawable/textinput_hint_label_selector</item>-->
        <item name="colorAccent">@color/text_primary</item>
    </style>

    <style name="AppActiveLoginTheme" parent="AppLoginTheme">
        <item name="colorAccent">@color/btn_wx_hint_bg</item>
    </style>

    <!--<style name="radioButtonTheme" parent=""-->

    <!-- toolbar start-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:colorPrimary">#fff</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Toolbar_TextAppearance_White">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- toolbar end-->
    
    <style name="FitnessRoomCardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UserProfileBodyTheme" parent="AppTheme">
        <item name="android:textColor">@color/text_gray1</item>
        <item name="android:textSize">@dimen/tip_text_size2</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/text_link</item>
    </style>

    <style name="TransprantToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="TextAppearance_MyApp_Title_Collapsed">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance_MyApp_Title_Expanded">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/PauseDialogTitle</item>
    </style>

    <style name="PauseDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>
</resources>
