<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="94dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/curriculumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="curriculumName"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_view_size"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coachName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="coachName"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/tip_text_size2"
        app:layout_constraintStart_toStartOf="@+id/curriculumName"
        app:layout_constraintTop_toBottomOf="@+id/curriculumName" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/time_clock_icon"
        app:layout_constraintStart_toStartOf="@+id/coachName"
        app:layout_constraintTop_toBottomOf="@+id/coachName" />

    <TextView
        android:id="@+id/classTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="classTime"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tip_text_size2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


    <TextView
        android:id="@+id/collectionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginRight="25dp"
        android:text="collectionNum"
        android:textColor="@color/white1"
        android:textSize="@dimen/tip_text_size2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/attation_icon"
        app:layout_constraintEnd_toStartOf="@+id/collectionNum"
        app:layout_constraintTop_toTopOf="@+id/collectionNum" />

    <android.support.design.button.MaterialButton
        android:id="@+id/lessonBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:textSize="@dimen/tip_text_size2"
        android:text="关注"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/collectionNum"
        app:layout_constraintTop_toBottomOf="@+id/collectionNum" />

    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/line_width"
        android:layout_height="1dp"
        android:background="@color/white1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="86dp" />
</android.support.constraint.ConstraintLayout>

