<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="132.5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/FitnessRoomCardTheme"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="18dp"
    android:background="@color/colorAccent"
    android:backgroundTint="@color/colorAccent"
    >
<android.support.constraint.ConstraintLayout
    android:background="@color/colorAccent"
    android:backgroundTint="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@color/text_gray"
        />

    <TextView
        android:id="@+id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_address"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/card_title"
        app:layout_constraintTop_toBottomOf="@+id/card_title" />

    <TextView
        android:id="@+id/card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:text="TextView"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/card_address"
        app:layout_constraintTop_toBottomOf="@+id/card_address" />

    <TextView
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.5dp"
        android:textSize="11sp"
        android:textColor="#F7CC88"
        android:text="健身卡"
        app:layout_constraintBottom_toBottomOf="@+id/card_type_icon"
        app:layout_constraintStart_toEndOf="@+id/card_type_icon"
        app:layout_constraintTop_toTopOf="@+id/card_type_icon" />

    <TextView
        android:id="@+id/card_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_type"
        app:layout_constraintStart_toEndOf="@+id/card_type"
        app:layout_constraintTop_toTopOf="@+id/card_type" />

    <ImageView
        android:id="@+id/card_type_icon"
        android:layout_width="14dp"
        android:layout_height="10.75dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/card_time"
        app:layout_constraintTop_toBottomOf="@+id/card_time"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/card_attention"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/heart_btn_selector"/>


</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>